{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ARMGDDN Downloader",
  "version": "1.0.20",
  "identifier": "com.armgddn.downloader",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ARMGDDN Downloader",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "http:default",
            "http:allow-fetch"
          ]
        }
      ]
    },
    "trayIcon": {
      "id": "main",
      "iconPath": "icons/icon.png"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "rclone*"
    ],
    "windows": {
      "wix": {
        "language": "en-US",
        "fragmentPaths": ["wix/protocol.wxs"]
      },
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine",
        "languages": ["English"],
        "displayLanguageSelector": false,
        "installerHooks": "nsis/installer-hooks.nsh"
      },
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {
    "deepLink": {
      "mobile": [],
      "desktop": {
        "schemes": ["armgddn"]
      }
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/Nildyanna/armgddn-downloader/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDMyM0NENTMyREMwNUNBQUUKUldTdXlnWGNNdFU4TWh3RkprSnJZaEV5TlRFZ3M2NEx5by95N0psNUhpUH"
    }
  }
}
